<div id="background">


<h1 id="main"> Profile</h1>
<div id="profile">
    
    
<div id="image">
    <img src="<%= profile_user.avatar %>" onerror="this.onerror=null; this.src='/images/no-image.png'"
    alt="<%= profile_user.name %>" >
</div>
   
    <h3>
        <%= profile_user.name %>
    </h3>
    
    <% if(user.id==profile_user.id){%>


        <form action="/users/update/<%= profile_user.id %>" enctype="multipart/form-data" method="post">

            <input type="text" name="name" placeholder="ypur name..." value="<%=profile_user.name%>" required>
            <input type="email" name="email" placeholder="your email" value="<%=profile_user.email%> " readonly required>
            <br>
            <input type="file" name="avatar" placeholder="profile picture">
           
                
                <input type="submit" class="btn btn-outline-success" value="update credential">
             
           
           
        </form>

        <% }else{ %>


            <div style="margin-left: 10px; margin-top:20px ;">
            <%if(!locals.are_friends){%>
                <a type="button" href="/users/profile/<%=profile_user._id%>/toggle_friend" id="add-friend"
                    class="btn btn-primary text-white ml-50">Add Friend</a>
                <%}else{%>
                   
                        <a type="button" href="/users/profile/<%=profile_user._id%>/toggle_friend"
                            class="btn btn-danger text-white md-50">Remove Friend</a>
                  
                  
                    <%}%>

                        <% } %>
                    </div>

</div>
</div>